= simple_form_for ([@recipe, @comment]), html: { multipart: true} do |f|    
    .panel-body        
        = f.input :comment, input_html: { class: 'form-control'} 
        = f.hidden_field :user_id, value: current_user.id
        %br/       
        = f.button :submit, class: 'btn- btn-lg btn-warning' 
