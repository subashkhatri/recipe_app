= render "layouts/categories" 
.col-md-10.col-sm-offset-2
    %h1 Recipe Management System
.col-md-6.col-sm-offset-4
    = will_paginate @recipies, renderer: BootstrapPagination::Rails
- @recipes.each_slice(3) do |recipe|
    .row
        - recipe.each do |rec|
            .col-md-4
                .recipe
                    .image_wrapper
                        = link_to rec do 
                            = image_tag rec.image.url(:medium)
                    %h2= link_to rec.title, rec


   